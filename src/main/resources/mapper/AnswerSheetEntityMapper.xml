<mapper namespace="com.lyingedu.questionnaire.dao.AnswerSheetEntityMapper">
    <resultMap id="answerSheetMap" type="com.lyingedu.questionnaire.dao.entity.AnswerSheetEntity">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="questionnaire_id" property="questionnaireId" jdbcType="VARCHAR"/>
        <result column="answer_user" property="answerUser" jdbcType="VARCHAR"/>
        <result column="answer" property="answer" jdbcType="VARCHAR" typeHandler="com.lyingedu.questionnaire.common.typehandler.AnswerEntityListTypeHandler"/>
        <result column="answer_time" property="answerTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <select id="queryAnswerSheet" parameterType="com.lyingedu.questionnaire.dao.entity.AnswerSheetEntity"
            resultType="com.lyingedu.questionnaire.dao.entity.AnswerSheetEntity" resultMap="answerSheetMap">
        select id,
        answer_user,
        questionnaire_id,
        answer,
        answer_time
        from answer_sheet
        <if test="answerUser != null and questionnaireId != null">
            where (answer_sheet.answer_user like concat('%'
            , #{answerUser}
            , '%') and questionnaire_id = #{questionnaireId})
        </if>
        <if test="answerUser == null and questionnaireId != null">
            where questionnaire_id = #{questionnaireId}
        </if>
        <if test="id != null">
            where answer_sheet.id like concat('%' , #{id} , '%')
        </if>

    </select>
    <insert id="addAnswerSheet" parameterType="com.lyingedu.questionnaire.dao.entity.AnswerSheetEntity">
        insert into answer_sheet (id,
                                  answer_user,
                                  questionnaire_id,
                                  answer,
                                  answer_time)
        values (#{id,jdbcType=VARCHAR},
                #{answerUser,jdbcType=VARCHAR},
                #{questionnaireId,jdbcType=VARCHAR},
                #{answer,jdbcType=VARCHAR, typeHandler=com.lyingedu.questionnaire.common.typehandler.AnswerEntityListTypeHandler},
                #{answerTime,jdbcType=TIMESTAMP})

    </insert>
